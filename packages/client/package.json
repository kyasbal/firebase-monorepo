{
  "name": "@firebase-monorepo/client",
  "version": "0.0.0",
  "description": "> TODO: description",
  "author": "Kakeru Ishii <i.kakeru@grimoire.gl>",
  "homepage": "",
  "license": "ISC",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:ci": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint-staged": "lint-staged",
    "build": "webpack --config ./webpack.prod.config.js && cpx 'static/**/*' dist --verbose",
    "build:dev": "webpack --config ./webpack.dev.config.js && cpx 'static/**/*' dist --verbose",
    "start": "webpack-dev-server --watch --config ./webpack.dev.config.js --content-base static/",
    "lint:format": "prettier --write --config ../../.prettierrc.json './src/**/*.{js,ts,tsx,scss,json}'",
    "lint": "prettier --list-different --config ../../.prettierrc.json './src/**/*.{js,ts,tsx,scss,json}'"
  },
  "dependencies": {
    "@firebase-monorepo/api-schema": "^0.0.0",
    "@types/jest": "^23.3.9",
    "cpx": "^1.5.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.9",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.15.2",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "ts-jest-babel-7": "^22.0.7",
    "typings-for-css-modules-loader": "^1.7.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "lint-staged": {
    "./src/**/*.{js,ts,tsx,scss,json}": [
      "npm run lint:format",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest-babel-7"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
